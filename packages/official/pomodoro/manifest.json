{
  "id": "com.booltox.pomodoro",
  "version": "1.0.0",
  "name": "番茄钟",
  "description": "基于番茄工作法的时间管理工具，支持系统通知提醒",
  "protocol": "^2.0.0",
  "runtime": {
    "ui": {
      "type": "webview",
      "entry": "dist/index.html"
    },
    "backend": {
      "type": "python",
      "entry": "backend/server.py",
      "requirements": "requirements.txt"
    }
  },
  "permissions": [
    "backend.register",
    "backend.message",
    "python.run",
    "storage.get",
    "storage.set",
    "window.show",
    "window.setTitle"
  ],
  "window": {
    "width": 400,
    "height": 500,
    "minWidth": 350,
    "minHeight": 450,
    "resizable": true
  },
  "author": "BoolTox Team",
  "homepage": "https://github.com/ByteTrue/booltox-plugins",
  "keywords": ["timer", "focus", "productivity", "pomodoro"],
  "category": "productivity",
  "icon": "icon.png"
}
