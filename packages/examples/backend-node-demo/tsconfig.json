{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2021", "DOM"],
    "types": ["vite/client"]
  },
  "include": ["src"],
  "references": [{ "path": "./backend/tsconfig.json" }]
}
